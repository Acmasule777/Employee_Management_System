@model IEnumerable<WebApplication2.Models.EmployeeMaster>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary text-white" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpMiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpEmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpBirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpMiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpEmailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpBirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpGender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesignationName)
                </td>
                <td>
                    <a class="btn btn-success text-white" asp-action="Edit" asp-route-id="@item.EmpId">Edit</a><br /><br />
                    <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@item.EmpId">Details</a><br /><br />
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.EmpId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
